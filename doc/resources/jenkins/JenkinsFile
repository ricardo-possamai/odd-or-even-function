node {
    withEnv(['AZURE_SUBSCRIPTION_ID=99999999-9999-9999-9999-999999999999',
            'AZURE_TENANT_ID=99999999-9999-9999-9999-999999999999']) {
        stage('Init') {
            cleanWs()
            checkout scm
        }

        stage('Build') {
            sh 'mvn clean package'
        }

        stage('Publish') {
            def RESOURCE_GROUP = 'az_functions' 
            def FUNC_NAME = 'javateste'
            // login Azure
            withCredentials([
                            string(credentialsId: 'AZ_USER', variable: 'azuser'),
                            string(credentialsId: 'AZ_PASS', variable: 'azpass'),
                            string(credentialsId: 'AZ_TENANT', variable: 'aztenant'), 
                            )]) {
            sh '''
                sh 'az login --service-principal --username $azuser --password $azpass --tenant $aztenant'
                
            '''
            }
            sh 'cd $PWD/target/azure-functions/odd-or-even-function-sample && zip -r ../../../archive.zip ./* && cd -'
            sh "az functionapp deployment source config-zip -g $RESOURCE_GROUP -n $FUNC_NAME --src archive.zip"
            sh 'az logout'
        }
    }
}
